[Unit]
Description=Tentacle GraphQL API
Documentation=https://github.com/joyautomation/tentacle
After=tentacle-nats.service
Requires=tentacle-nats.service

[Service]
Type=simple
EnvironmentFile=/opt/tentacle/config/tentacle.env
ExecStart=/opt/tentacle/bin/tentacle-graphql
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=tentacle-graphql

[Install]
WantedBy=multi-user.target
